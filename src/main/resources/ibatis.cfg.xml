<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE sqlMapConfig PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"          "http://ibatis.apache.org/dtd/sql-map-config-2.dtd"><sqlMapConfig>	<!-- 数据源配置,如果和Spring继承,则数据源交给Spring管理.这里只是对ibatis进行简单测试,没有用到Spring  -->    <properties resource="application.properties" />      <transactionManager type="JDBC">          <dataSource type="SIMPLE">              <property name="JDBC.Driver" value="${jdbc.driver}" />              <property name="JDBC.ConnectionURL" value="${jdbc.url}" />              <property name="JDBC.Username" value="${jdbc.username}" />              <property name="JDBC.Password" value="${jdbc.password}" />          </dataSource>      </transactionManager>         <sqlMap resource ="com/xuyuan/ibatis/model/user-sqlmap.xml" /></sqlMapConfig>