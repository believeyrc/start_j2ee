<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN""http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping>	<class name="com.xuyuan.hibernate3.model.User" table="user">		<id name="id" column="id" type="java.lang.Integer" length="10">			<generator class="native" />		</id>		<property name="username" column="username" type="java.lang.String" />		<property name="password" column="password" type="java.lang.String" />		<property name="email" column="email" type="java.lang.String" />		<property name="phone" column="phone" type="java.lang.String" />		<property name="dept" column="dept" type="java.lang.String" />	</class></hibernate-mapping>