<?xml version="1.0"?><!DOCTYPE hibernate-mapping PUBLIC	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping package="com.xuyuan.hibernate3.model">	<class name="IdCard">		<id name="id">			<generator class="foreign">				<param name="property">person</param>			</generator>		</id>		<property name="validity"></property>		<one-to-one name="person" constrained="true"></one-to-one>	</class></hibernate-mapping>