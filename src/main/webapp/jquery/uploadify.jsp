<%@ page language="java" contentType="text/html; charset=UTF8" pageEncoding="UTF8"%><%@ include file="/common/taglibs.jsp" %><!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd"><html><head><meta http-equiv="Content-Type" content="text/html; charset=UTF-8"><title>Struts2 Uploadify(jQuery) Demo</title><script language="javascript" src="${ctx}/js/jquery-1.7.1.min.js"></script><script language="javascript" src="${ctx}/js/jquery.ux/uploadify/swfobject.js"></script><script language="javascript" src="${ctx}/js/jquery.ux/uploadify/jquery.uploadify.v2.1.4.js"></script><script type="text/javascript">$(document).ready(function() {	$("#upload").uploadify({				'uploader'       : '${ctx}/js/jquery.ux/uploadify/uploadify.swf',		'cancelImg'      : '${ctx}/js/jquery.ux/uploadify/cancel.png',		'script'         : 'fileUpload!jqueryFileUpload.action',		'fileDataName'   : 'userImage',		//和input标签的name属性一致,struts2中变量名也是这个		'queueID'        : 'fileQueue',		//存放队列的DIV的id		'folder'         : '/',		'displayData'    : 'percentage',	//speed:显示速度,percentage:显示完成百分比		'buttonText'     : 'Browse Files',	//上传按钮的文字		'auto'           : false,			//选取文件后不自动上传		'multi'          : true,			//允许上传多个文件		'sizeLimit'      : 1073741824,		//设置单个文件大小限制 		'simUploadLimit' : 5,				//一次同步上传的文件数目		'queueSizeLimit' : 4,				//队列中同时存在的文件个数限制     	'fileDesc'       : '支持格式：jpg,gif,png,bmp,pdf,doc,txt',     	'fileExt'        : '*.jpg;*.gif,*.jpeg,*.png,*.bmp,*.pdf,*.doc,*.txt',     	onComplete: function (event, queueID, fileObj, response, data) { 			alert(fileObj.name + "上传完毕");		}, 		onError: function(event, queueID, fileObj) {             alert("文件:" + fileObj.name + "上传失败");        	},        	onCancel: function(event, queueID, fileObj){        	} 	});});</script></head><body>	<p><strong>文件上传</strong></p>	<div id="fileQueue"></div>	<input id="upload" name="userImage" type="file" />	<a href="javascript:$('#upload').uploadifyUpload();">开始上传</a> | 	<a href="javascript:$('#upload').uploadifyClearQueue();">取消上传</a></body></html>